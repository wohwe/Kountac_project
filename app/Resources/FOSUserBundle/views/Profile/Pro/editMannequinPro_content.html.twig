<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Aller à la page d'accueil" href="{{ path('kountac_homepage')}}">Home</a><span>&raquo;</span></li>
                    <li class="home"> <a title="Aller à mon profil professionnel" href="{{ path('pro_user_profile_show')}}">Mon profil</a><span>&raquo;</span></li>
                    <li class="home"> <a title="Voir tous les mannequins" href="{{ path('mannequin_pro_index')}}">Tous les mannequins</a><span>&raquo;</span></li>
                    <li><strong>Modification mannequin ''{{ mannequin.nomMannequin|capitalize }}''</strong></li>
                </ul>
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert-box">
                        <br><br>
                        {{ flashMessage }}
                        <br><br>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End --> 
{% trans_default_domain 'FOSUserBundle' %}
<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-7 col-xs-12">
                <div class="page-content checkout-page">
                    <div class="page-title">
                        <h2 class="checkout-step">Modification ''{{ mannequin.nomMannequin|capitalize }}''</h2>
                    </div>
                    
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="box-border">
                        <ul>
                            <li class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.nom_mannequin) }}
                                </div>                                
                                <div class="col-sm-6">
                                    {{ form_row(form.statut_mannequin) }}
                                </div>
                            </li>
                            <li class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.taille_standard_mannequin) }}
                                </div><!--/ [col] -->
                                <div class="col-sm-6">
                                    {{ form_row(form.poids_mannequin) }}
                                </div><!--/ [col] -->
                            </li>
                            <li class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.taille_mannequin) }}
                                </div><!--/ [col] -->
                                <div class="col-sm-6">
                                    {{ form_row(form.tour_taille_mannequin) }}
                                </div><!--/ [col] -->
                            </li>
                            <li class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.tour_poitrine_mannequin) }}
                                </div><!--/ [col] -->
                                <div class="col-sm-6">
                                    {{ form_row(form.tour_grandes_hanches_mannequin) }}
                                </div><!--/ [col] -->
                            </li>
                            <li class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.numero_teint_mannequin) }}
                                </div><!--/ [col] -->
                                <div class="col-sm-6">
                                    <br><br><br>{{ form_row(form.file) }}
                                    <br>
                                    <img src="{{ mannequin.AssetPath|imagine_filter('commandeThumb') }}" alt="">
                                </div><!--/ [col] -->
                            </li>
                            
                            <li class="row">
                                <div class="col-sm-6">
                                </div>
                                <div class="col-sm-6">
                                    <br><br><button class="button pull-right" type="submit"><i class="fa fa-check"></i>&nbsp; &nbsp;<span>Continuer</span></button>
                                </div>
                            </li>
                        </ul>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        <aside class="right sidebar col-sm-3 col-xs-12">
            {% include 'FOSUserBundle:Profile:Navigation/menuPro.html.twig' %}
            <br><br>
            {% include 'FOSUserBundle:Profile:Navigation/informationsPro.html.twig' %}
        </aside>
        </div>
        
    </div>
</div>
</section>

