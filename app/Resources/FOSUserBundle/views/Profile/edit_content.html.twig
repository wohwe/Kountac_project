<div class="breadcrumbs">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <ul>
            <li class="home"> <a title="Aller à la page d'accueil" href="{{ path('kountac_homepage')}}">Home</a><span>&raquo;</span></li>
            <li class="home"> <a title="Aller à mon profil" href="{{ path('fos_user_profile_show')}}">Mon profil</a><span>&raquo;</span></li>
            <li><strong>Modification</strong></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- Breadcrumbs End --> 
{% trans_default_domain 'FOSUserBundle' %}
<!-- Main Container -->
<section class="main-container col2-right-layout">
  <div class="main container">
    <div class="row">
      <div class="col-main col-sm-9 col-xs-12">
 
        
        <div class="page-content checkout-page"><div class="page-title">
          <h2 class="checkout-step">Modification de vos informations</h2>
        </div>
        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        
            <div class="box-border">
                <ul>
                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_label(form.sexe) }}*
                            {{ form_row(form.sexe.0) }}
                            {{ form_row(form.sexe.1) }}
                        </div>
                    </li>
                    <br>
                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.nom) }}
                        </div><!--/ [col] -->
                        <div class="col-sm-6">
                            {{ form_row(form.prenom) }}
                        </div><!--/ [col] -->
                    </li>
                    <br>
                    <li class="row">
                        <div class="col-sm-6">
                            <label class="required">Image de profil</label>
                            {{ form_widget(form.image.file) }}
                            <br><img src="{{ user.image.AssetPath|imagine_filter('commandeThumb') }}" alt="">
                        </div>
                        <div class="col-sm-6">
                            <label class="required">Image de couverture (facultatif)</label>
                            {{ form_widget(form.image.file2) }}
                            {% if user.image.path2 %}
                            <br>
                            <img src="{{ user.image.AssetPath2|imagine_filter('commandeThumb') }}" alt="">
                             {% endif %}               
                        </div><!--/ [col] -->
                    </li>
                    <br>
                    <br>
                    <li class="row"> 
                        <div class="col-xs-12">
                            {{ form_row(form.adresse) }}
                        </div><!--/ [col] -->

                    </li><!-- / .row -->

                    <li class="row">

                        <div class="col-sm-6">
                           {{ form_row(form.rue) }}
                        </div><!--/ [col] -->

                        <div class="col-sm-6">
                            {{ form_row(form.ville) }}
                        </div>
                    </li>

                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.cp) }}
                        </div><!--/ [col] -->

                        <div  class="col-sm-6">
                            {{ form_row(form.pays) }}
                        </div><!--/ [col] -->
                    </li>
                    
                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.telephone) }}
                        </div><!--/ [col] -->

                        <div  class="col-sm-6">
                            {{ form_row(form.telephonefix) }}
                        </div><!--/ [col] -->
                    </li>
                    <div style="display:none;">
                    <br><br>
                    <h2 class="checkout-step">Espace marque</h2>
                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.marque) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.adresse_entreprise) }}
                        </div><!--/ [col] -->
                    </li>
                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.rue_entreprise) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.ville_entreprise) }}
                        </div>
                    </li>
                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.cp_entreprise) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.pays_entreprise) }}
                        </div>
                    </li>
                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.telephone_entreprise) }}
                        </div>

                        <div class="col-sm-6">
                            {{ form_row(form.telephonefix_entreprise) }}
                        </div>
                    </li>
                    <li class="row">
                        <div class="col-sm-12">
                            {{ form_row(form.description_entreprise) }}
                        </div>
                    </li>
                    </div>
                    <br><br>
                    <br><br>
                    <li class="row"> 
                        <div class="col-xs-12">
                            {{ form_row(form.username) }}
                        </div><!--/ [col] -->

                    </li>
                    <li class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="col-sm-6">
                            {{ form_row(form.current_password) }}
                        </div>
                    </li>

                    <br><br><br>
                    <li>
                        <button class="button" type="submit"><i class="icon-login"></i>&nbsp; <span>{{ 'profile.edit.submit'|trans }}</span></button>
                        <br><br><a href="{{ path ('fos_user_change_password')}}"><u><strong>Changez votre mot de passe</strong></u></a>
                        
                    </li>
                </ul>
            </div>
    {{ form_widget(form) }}
  {{ form_end(form) }}
        </div>
      </div>
      <aside class="right sidebar col-sm-3 col-xs-12">
        {% include 'FOSUserBundle:Profile:Navigation/menu.html.twig' %}
        <br><br>
        {% include 'FOSUserBundle:Profile:Navigation/informations.html.twig' %}
      </aside>
    </div>
  </div>
  </section>

