{% extends "@FOSUser/layoutAdmin.html.twig" %}

{% block bodyAdmin %}
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Aller Ã  mon profil administrateur" href="{{ path('admin_profile_show')}}">Mon profil</a><span>&raquo;</span></li>
                    <li class="home"> <a title="Voir tous les produits" href="{{ path('admin_profile_show')}}">Mes produits</a><span>&raquo;</span></li>
                    <li><strong>Modification "{{ produit.nom|capitalize }}" (1/3)</strong></li>
                </ul>
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert-box">
                        <br><br>
                        {{ flashMessage }}
                        <br><br>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End --> 
{% trans_default_domain 'FOSUserBundle' %}
<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-7 col-xs-12">
                <div class="page-content checkout-page">
                    <div class="page-title">
                        <h2 class="checkout-step">Modification produit (1/3)</h2>
                    </div>
                    
                    {{ form_start(form) }}
                    <div class="box-border">
                        <ul>
                            <li class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.nom) }}
                                </div>                                
                                <div class="col-sm-6">
                                    {{ form_row(form.matiere) }}
                                </div>
                            </li>
                            <li class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.categorie) }}
                                </div><!--/ [col] -->
                                <div class="col-sm-6">
                                    {{ form_row(form.collection) }}
                                </div><!--/ [col] -->
                            </li>
                            <li class="row"> 
                                <div class="col-xs-12">
                                    {{ form_row(form.description) }}
                                </div><!--/ [col] -->
                            </li><!-- / .row -->
                            
                            
                            <br>
                            <li>
                                <button class="button pull-right" type="submit"><i class="fa fa-angle-double-right"></i>&nbsp; &nbsp;<span>Suivant</span></button>
                            </li>
                        </ul>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        <aside class="right sidebar col-sm-3 col-xs-12">
            {% include 'FOSUserBundle:Profile:Navigation/menuAdmin.html.twig' %}
            <br><br>
            {% include 'FOSUserBundle:Profile:Navigation/informationsPro.html.twig' %}
        </aside>
        </div>
        
    </div>
</div>
</section>
{% endblock %}