{% extends "@FOSUser/layoutAdmin.html.twig" %}

{% block bodyAdmin %}
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        <li class="home"> <a title="Aller à la page d'accueil" href="{{ path('kountac_homepage')}}">Home</a><span>&raquo;</span></li>
                        <li class="home"> <a title="Aller à mon profil" href="{{ path('admin_profile_show')}}">Mon profil (admin)</a><span>&raquo;</span></li>
                        <li class="home"> <a title="Voir tous les produits" href="{{ path('adminProduits_index')}}">Tous les produits</a><span>&raquo;</span></li>
                        <li><strong>Modification produit (1/2)</strong></li>
                    </ul>
                    {% for flashMessage in app.session.flashbag.get('success') %}
                        <div class="alert-box">
                            <br><br>
                            {{ flashMessage }}
                            <br><br>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumbs End -->

    <!-- Main Container -->
    <section class="main-container col2-right-layout">
        <div class="main container">
            <div class="row">
                <div class="col-main col-sm-9 col-xs-12">
                    <div class="page-content checkout-page">
                        <div class="page-title">
                            <h2 class="checkout-step">Modification produit: {{ produit.nom|capitalize }}</h2>
                        </div>

                        {{ form_start(form) }}

                        <div class="box-border">
                            <ul>
                                <li class="row">
                                    <div class="col-sm-12">
                                        {{ form_row(form.nom) }}
                                    </div>
                                </li>
                                <li class="row">
                                    <div class="col-sm-6">
                                        {{ form_row(form.categorie) }}
                                    </div><!--/ [col] -->
                                    <div class="col-sm-6">
                                        {{ form_row(form.collection) }}
                                    </div><!--/ [col] -->
                                </li>
                                <li class="row"> 
                                    <div class="col-xs-12">
                                        {{ form_row(form.description) }}
                                    </div><!--/ [col] -->
                                </li><!-- / .row -->
                                <li class="row">
                                    <div class="col-sm-6">
                                        {{ form_row(form.matiere) }}
                                    </div><!--/ [col] -->
                                    <div class="col-sm-6">
                                        {{ form_row(form.taille) }}
                                    </div><!--/ [col] -->
                                </li>
                                <br><br>
                                <li class="row">
                                    <div class="col-sm-6">
                                        <label class="required">Première image*</label>
                                        {{ form_widget(form.picture.file) }}
                                        <br><img src="{{ produit.picture.AssetPath|imagine_filter('commandeThumb') }}" alt="">
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="required">Seconde image</label>
                                        {{ form_widget(form.picture.file2) }}
                                        {% if produit.picture.path2 %}<br><img src="{{ produit.picture.AssetPath2|imagine_filter('commandeThumb') }}" alt="">{% endif %}
                                    </div><!--/ [col] -->
                                </li>
                                <br><br>
                                <li class="row">
                                    <div class="col-sm-4">
                                        {{ form_row(form.etat) }}
                                    </div><!--/ [col] -->
                                    <div class="col-sm-4">
                                        {{ form_row(form.stock) }}
                                    </div>
                                    <div class="col-sm-4">
                                        {{ form_row(form.reduction) }}
                                    </div>
                                </li>
                                <br>
                                <br>

                                <li>
                                    <button class="button" type="submit"><i class="icon-check"></i>&nbsp; <span>Suivant</span></button>
                                </li>
                            </ul>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <aside class="right sidebar col-sm-3 col-xs-12">
                    {% include 'FOSUserBundle:Profile:Navigation/menuAdmin.html.twig' %}
                    <br><br>
                    {% include 'FOSUserBundle:Profile:Navigation/informationsPro.html.twig' %}
                </aside>
            </div>

        </div>
    </div>
</section>

{% endblock %}
