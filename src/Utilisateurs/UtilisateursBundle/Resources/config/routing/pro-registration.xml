<?xml version="1.0" encoding="UTF-8" ?>                                                                                                                 
 
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
 
    <route id="pro_user_register" pattern="/">
        <default key="_controller">UtilisateursBundle:Registration:registerPro</default>
        <requirement key="_method">GET|POST</requirement>
    </route>

    <route id="pro_user_profile_show" path="/pro" methods="GET">
        <default key="_controller">UtilisateursBundle:Profile:showPro</default>
    </route>

    <route id="pro_user_profile_edit" path="/pro/edit" methods="GET POST">
        <default key="_controller">UtilisateursBundle:Profile:editPro</default>
    </route>
    
</routes>