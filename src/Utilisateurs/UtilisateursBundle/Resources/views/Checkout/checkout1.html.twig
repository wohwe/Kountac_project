{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
    <!-- Breadcrumbs -->

    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        <li class="home"> <a title="Aller à l'accueil" href="{{ path ('kountac_homepage')}}">Accueil</a><span>&raquo;</span></li>
                        <li class="home"> <a title="Aller à mon panier" href="{{ path ('panier')}}">Mon panier</a><span>&raquo;</span></li>
                        <li><strong>Adresse de facturation</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumbs End --> 

    <!-- Main Container -->
    <section class="main-container col2-right-layout">
        <div class="main container">
            <div class="row">
                <div class="col-main col-sm-9 col-xs-12">
                    <div class="page-content checkout-page"><div class="page-title">
                        <h2>Finalisation de la commande (1/2)</h2>
                        </div>
                        <h4 class="checkout-sep"></h4>
                        <h4 class="checkout-sep">1. Information de livraison (adresse de livraison)</h4>
                        <div class="box-border">
                            <form class="col" action="{{ path('Checkout_index1') }}" method="POST" {{ form_enctype(form) }} class="form">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                            <ul>
                                <li class="row">
                                    <div class="col-sm-6">
                                        {{ form_row(form.nom) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_row(form.prenom) }}
                                    </div>
                                </li>
                                <li class="row"> 
                                    <div class="col-xs-6">
                                        {{ form_row(form.email) }}
                                    </div>
                                    <div class="col-xs-6">
                                        {{ form_row(form.adresse) }}
                                    </div>
                                </li>
                                <li class="row">
                                    <div class="col-sm-6">
                                        {{ form_row(form.rue) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_row(form.ville) }}
                                    </div>
                                </li>
                                <li class="row">
                                    <div class="col-sm-6">
                                        {{ form_row(form.cp) }}
                                    </div><!--/ [col] -->
                                    <div  class="col-sm-6">
                                        {{ form_row(form.pays) }}
                                    </div>
                                </li>
                                <li class="row">
                                    <div class="col-sm-6">
                                        {{ form_row(form.telephone) }}
                                    </div><!--/ [col] -->
                                    <div class="col-sm-6">
                                        {{ form_row(form.telephonefix) }}
                                    </div><!--/ [col] -->
                                </li><!--/ .row -->
                                <br><br>
                                <li class="row">
                                    <div class="col-sm-6">
                                        {{ form_row(form.username) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_row(form.current_password) }}
                                    </div>
                                </li>
                                <br>
                                <li>
                                    <button class="button" type="submit"><i class="fa fa-angle-double-right"></i>&nbsp; <span>Continuer</span></button>
                                </li>
                            </ul>
                            {{ form_end(form) }}
                            </form>
                        </div>
                    </div>
                </div>
                <aside class="right sidebar col-sm-3 col-xs-12">
                    {% include 'UtilisateursBundle:Checkout:resumeCheckout/resumeCheckout.html.twig' %}
                </aside>
            </div>
        </div>
    </section>
    <!-- Main Container End -->

{% endblock fos_user_content %}